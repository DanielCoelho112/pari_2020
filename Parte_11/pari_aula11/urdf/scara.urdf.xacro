<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="scara">

<!-- xacro consegue meter ficheiro  ca dentro, e abri los -->

<xacro:property name="length_cil" value="1" />
<xacro:property name="radius_cil" value="0.5" />



<material name="blue">
    <color rgba="0 0 1 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>
  <material name="green">
    <color rgba="0 1 0 1"/>
  </material>
      <material name="black">
    <color rgba="1 1 0 1"/>
  </material>


  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="${length_cil}" radius="${radius_cil}"/>
      </geometry>
       <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <material name="black"/>
    </visual>
  </link>

   <link name="base_link_f">
    <visual>
      <geometry>
        <cylinder length="${length_cil}" radius="${radius_cil}"/>
      </geometry>
       <origin rpy="0 0 0" xyz="0 0 -0.5"/>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="base_link_to_base_link_f" type="fixed">
    <parent link="base_link"/>
    <child link="base_link_f"/>
    <origin xyz="0 0 2"/>
  </joint>



  <link name="link1">
    <visual>
      <geometry>
        <box size="4 1 1"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="2 0 -0.5"/>
      <material name="blue"/>
    </visual>
  </link>





  <joint name="base_link_to_link1" type="continuous">
    <parent link="base_link"/>
    <child link="link1"/>
      <axis xyz="0 0 1"/>
    <origin xyz="0 0 2"/>
  </joint>


  <link name="link2">
    <visual>
      <geometry>
        <box size="4 1 1"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="2 0 -0.5"/>
      <material name="red"/>
    </visual>
  </link>





  <joint name="link1_to_link2" type="continuous">
    <parent link="link1"/>
    <child link="link2"/>
      <axis xyz="0 0 1"/>
    <origin xyz="4 0 0"/>
  </joint>


   <link name="link1_f">
    <visual>
      <geometry>
        <cylinder length="${length_cil}" radius="${radius_cil}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.5"/>
      <material name="red"/>
    </visual>
  </link>


   <joint name="link1_to_link1_f" type="fixed">
    <parent link="link1"/>
    <child link="link1_f"/>
    <origin xyz="4 0 0"/>
  </joint>



  <link name="link2_f">
    <visual>
      <geometry>
         <cylinder length="${length_cil}" radius="${radius_cil}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.5"/>
      <material name="red"/>
    </visual>
  </link>


  <joint name="link2_to_link2_f" type="fixed">
    <parent link="link2"/>
    <child link="link2_f"/>
    <origin xyz="4 0 0"/>
  </joint>




 <link name="ee_link">
    <visual>
      <geometry>
         <mesh filename="package://pari_aula11/stl/boltDemo.stl" scale="0.1 0.1 0.1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 1"/>
      <material name="green"/>
    </visual>
  </link>

  <joint name="link2_f_to_ee_link" type="prismatic">
    <parent link="link2_f"/>
    <child link="ee_link"/>
    <limit effort="1000.0" lower="-1.5" upper="1.5" velocity="0.5"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 -1"/>
  </joint>


</robot>
